<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Books List</title>
    <style>
        body {
    font-family: Arial, sans-serif;
    background-color: #f2f2f2;
    margin: 0;
    padding: 0;
}

.navbar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    background-color: #151515;
    padding: 10px 20px;
    color: white;
}

.navbar-left h2 {
    margin: 0;
}
.navbar-right{
    display: flex;
    justify-content: space-evenly;
    align-items: center;
    gap: 15px;
}
.navbar-right a {
    color: white;
    text-decoration: none;
    padding: 8px 16px;
    background-color: #4CAF50;
    border-radius: 4px;
}

.navbar-right a:hover {
    background-color: #45a049;
}

.container {
    width: 80%;
    margin: 20px auto;
    background-color: white;
    padding: 20px;
    border-radius: 4px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 20px;
}

table, th, td {
    border: 1px solid #ddd;
}

th, td {
    padding: 12px;
    text-align: center;
}

th {
    background-color: #f4f4f4;
}

a {
    color: #007BFF;
    text-decoration: none;
}

a:hover {
    text-decoration: underline;
}

.edit{
    background-color: #4CAF50;
    padding: 5px 10px;
}
.edit a{
    text-decoration: none;
    color: white;
}

button {
    padding: 5px 10px;
    background-color: #f44336;
    color: white;
    border: none;
    border-radius: 4px;
    cursor: pointer;
}

button:hover {
    background-color: #d32f2f;
}

    </style>
</head>
<body>
    <nav class="navbar">
        <div class="navbar-left">
            <h2>AIML BOOKS</h2>
        </div>
        <div class="navbar-right">
            
            <a href="/logout">Sign Out</a>
        </div>
    </nav>
    <div class="container">
        <h1>Books List</h1>
        <a href="/books/new">Add New Book</a>
        <table>
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Author</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% books.forEach(book => { %>
                    <tr>
                        <td><%= book.title %></td>
                        <td><%= book.author %></td>
                        <td>
                            <button class="edit"><a href="/books/edit/<%= book._id %>">Edit</a></button>
                            <form action="/books/<%= book._id %>?_method=DELETE" method="POST" style="display:inline;">
                                <button type="submit">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</body>
</html>
